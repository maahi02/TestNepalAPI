@using TestNepal.Api.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>TestNepal - Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<!-- END HEAD -->
<body class="login">
    <div class="container body-content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 white">
                <!-- BEGIN LOGO -->
                <div class="logo">
                    <a href="/">
                        <img src="@Url.Content("~/Content/images/logobig.png")" alt="" />
                    </a>
                </div>
                <!-- END LOGO -->
                <!-- BEGIN LOGIN -->
                <div class="content">
                    <!-- BEGIN LOGIN FORM -->
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title font-green">Sign In</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> Enter any username and password. </span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 minheight">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control textbox", @placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-8 col-md-offset-2 minheight">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control textbox" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 minheight">
                        <label class="form-check-label round-label">
                            <div class="round">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                <label for="RememberMe"></label>
                            </div>
                            <span class="check-box-label">Remember Me</span>
                        </label>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <input type="submit" value="Login" class="btn global-btnsolid blue pull-right" />
                        </div>
                    </div>
                </div>
            </div>
}

                </div>

                <div class="copyright"> @DateTime.Now.Year &copy; TestNepal.</div>

            </div>
        </div>
        
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
